<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|left"
    tools:context="com.credit.korea.KoreaCredit.MainActivity"
    android:orientation="vertical"
    android:gravity="top|left"
    android:background="#e5e5e5">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#f9f9f9"
        android:layout_gravity="top|left">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:scaleType="fitStart"
            android:src="@drawable/card_find_text0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_gravity="top|left"
        android:layout_marginTop="1dp"
        android:padding="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"

            android:scaleType="fitStart"
            android:src="@drawable/card_find_text1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|left"
            android:layout_marginTop="5dp"
            android:id="@+id/_stackKinds"></LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"

            android:scaleType="fitStart"
            android:src="@drawable/card_find_text2"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:background="#fff"
            android:layout_marginTop="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/_inputCompany"
                android:background="@drawable/input_bg1"
                android:textSize="13dp"
                android:layout_weight="1"
                android:layout_gravity="top|left"
                android:gravity="left|center_vertical"
                android:imeOptions="actionDone"
                android:inputType="text" />

            <Button
                android:layout_width="97dp"
                android:layout_height="30dp"
                android:id="@+id/_btnSearch"
                android:background="@drawable/card_this_btn"
                android:layout_gravity="top|left" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"

            android:scaleType="fitStart"
            android:src="@drawable/card_find_text3"
            android:layout_marginTop="15dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/_spinnerCompanys"
            android:layout_gravity="top|left"
            android:gravity="top|left"
            android:background="@drawable/select_bg0"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"

            android:scaleType="fitStart"
            android:src="@drawable/card_find_text4"
            android:layout_marginTop="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/_inputKey"
            android:background="@drawable/input_bg0"
            android:textSize="13dp"
            android:layout_weight="1"
            android:layout_gravity="top|left"
            android:layout_marginTop="5dp"
            android:imeOptions="actionNext"
            android:gravity="left|center_vertical"
            android:inputType="text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"

            android:scaleType="fitStart"
            android:src="@drawable/card_find_text5"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|left"
            android:layout_marginTop="5dp">

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/_inputMin"
                android:inputType="number"
                android:background="@drawable/input_bg0"
                android:textSize="13dp"
                android:layout_gravity="top|left"
                android:hint="(원/년)"
                android:imeOptions="actionNext"
                android:gravity="center_vertical|right" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"

                android:scaleType="fitCenter"
                android:src="@drawable/card_find_text7"
                android:layout_gravity="top|left"
                android:layout_marginLeft="5dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/_inputMax"
                android:inputType="number"
                android:background="@drawable/input_bg0"
                android:textSize="13dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="5dp"
                android:hint="(원/년)"
                android:imeOptions="actionNext"
                android:gravity="center_vertical|right" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="match_parent"

                android:scaleType="fitCenter"
                android:src="@drawable/card_find_text8"
                android:layout_gravity="top|left"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:id="@+id/imageView16"
            android:scaleType="fitStart"
            android:src="@drawable/card_find_text6"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|left"
            android:layout_marginTop="5dp"
            android:id="@+id/_stackNations" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top|left"
        android:background="#fff"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/_btnComplete"
            android:layout_gravity="top|left"
            android:src="@drawable/btn_search_txt"
            android:padding="13dp"
            android:background="@drawable/btn_bg0"
            android:layout_margin="15dp"
            android:scaleType="fitCenter" />
    </FrameLayout>

</LinearLayout>

