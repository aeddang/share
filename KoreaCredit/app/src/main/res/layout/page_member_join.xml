<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|left"
    tools:context="com.credit.korea.KoreaCredit.MainActivity"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scrollbars="none"
        android:id="@+id/_scrollView"
        android:layout_gravity="top|left">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:background="#e5e5e5">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#22b4ed">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="13dp"
                android:id="@+id/imageView"
                android:layout_gravity="center"
                android:src="@drawable/join_title"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="top|center_horizontal"
                android:padding="10dp">

                <Button
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:id="@+id/_btnN"
                    android:background="@drawable/sel_btn_sns_n" />

                <Button
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:id="@+id/_btnG"
                    android:background="@drawable/sel_btn_sns_g"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:id="@+id/_btnF"
                    android:background="@drawable/sel_btn_sns_f"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:id="@+id/_btnC"
                    android:background="@drawable/sel_btn_sns_k"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:layout_gravity="top|left"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:padding="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/_imgSns"
                android:scaleType="fitCenter"
                android:src="@drawable/img_sns_n"
                android:layout_gravity="top|left" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/_inputIDBox">

                <ImageView
                    android:layout_width="134dp"
                    android:layout_height="12dp"

                    android:src="@drawable/join_text_0"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitStart" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top|left"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/_inputID"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg1"
                        android:textSize="13dp"
                        android:layout_gravity="top|left"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:singleLine="true" />

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:id="@+id/_btnIDCheck"
                        android:background="@drawable/join_btn_checkid"
                        android:layout_gravity="top|left" />
                </LinearLayout>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"

                    android:src="@drawable/join_text_1"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/_inputPW"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:password="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_bg0"
                    android:imeOptions="actionNext"
                    android:textSize="13dp"
                    android:layout_gravity="top|left"
                    android:maxLength="16" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"

                    android:src="@drawable/join_text_2"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="10dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/_inputPWCheck"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:password="true"
                    android:layout_marginTop="10dp"
                    android:imeOptions="actionNext"
                    android:background="@drawable/input_bg0"
                    android:textSize="13dp"
                    android:maxLength="16" />
           </LinearLayout>





            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"

                android:src="@drawable/join_text_3"
                android:layout_gravity="top|left"
                android:longClickable="true"
                android:scaleType="fitStart"
                android:layout_marginTop="10dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/_inputPhone0"
                    android:layout_gravity="top|left"
                    android:inputType="phone"
                    android:text="010"
                    android:maxLength="3"
                    android:imeOptions="actionNext"
                    android:textSize="13dp"
                    android:background="@drawable/input_bg0" />
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/join_icon_1"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp" />
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/_inputPhone1"
                    android:layout_gravity="top|left"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:textSize="13dp"
                    android:maxLength="4"
                    android:background="@drawable/input_bg0" />
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/join_icon_1"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp" />
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/_inputPhone2"
                    android:layout_gravity="top|left"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:textSize="13dp"
                    android:maxLength="4"
                    android:background="@drawable/input_bg0" />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"

                android:src="@drawable/join_text_4"
                android:layout_gravity="top|left"
                android:longClickable="true"
                android:scaleType="fitStart"
                android:layout_marginTop="10dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:id="@+id/_inputEmail0"
                    android:layout_gravity="top|left"

                    android:inputType="textEmailAddress"
                    android:textSize="13dp"
                    android:imeOptions="actionNext"
                    android:background="@drawable/input_bg0" />
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/join_icon_0"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp" />
                <EditText
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:id="@+id/_inputEmail1"
                    android:layout_gravity="top|left"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textSize="13dp"
                    android:background="@drawable/input_bg0" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"

                android:src="@drawable/join_text_8"
                android:layout_gravity="top|left"
                android:longClickable="true"
                android:scaleType="fitStart"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/_checkProvision"
                    android:background="@drawable/sel_check"
                    android:layout_gravity="top|left" />
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/join_check_text2"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp" />
                <Button
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:text="이용약관"
                    android:id="@+id/_btnProvision"
                    android:background="@drawable/btn_bg2"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="5dp"
                    android:textColor="#666666"
                    android:textSize="12dp" />
                <Button
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/_checkPrivacy"
                    android:background="@drawable/sel_check"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="10dp" />
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/join_check_text2"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp" />
                <Button
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="개인정보취급방침"
                    android:id="@+id/_btnPrivacy"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_bg2"
                    android:textColor="#666666"
                    android:textSize="9dp" />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"

                android:src="@drawable/join_text_7"
                android:layout_gravity="top|left"
                android:longClickable="true"
                android:scaleType="fitStart"
                android:layout_marginTop="10dp"
               />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/_checkSendSMS"
                    android:background="@drawable/sel_check"
                    android:layout_gravity="top|left" />
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/join_check_text3"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/_checkSendEMail"
                    android:background="@drawable/sel_check"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="30dp" />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/join_check_text0"
                    android:layout_gravity="top|left"
                    android:longClickable="true"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"></FrameLayout>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/_btnSendPW"
                    android:layout_gravity="top|left"
                    android:background="@drawable/join_btn_send_pw" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/_inputSendPW"
                    android:inputType="number"
                    android:background="@drawable/input_bg1"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:singleLine="true" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:id="@+id/_btnPWConfirm"
                    android:background="@drawable/join_btn_send_pw_check"
                    android:layout_gravity="top|left" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/myinfo_text1"
                android:layout_gravity="top|left"
                android:longClickable="true"
                android:scaleType="fitStart"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:id="@+id/_checkSmsOk"
                        android:background="@drawable/sel_check"
                        android:layout_gravity="top|left" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:src="@drawable/myinfo_text3"
                        android:layout_gravity="left|center_vertical"
                        android:longClickable="true"
                        android:scaleType="fitStart"
                        android:layout_marginLeft="27dp"
                        android:id="@+id/_txtSmsOk" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:id="@+id/_checkSmsNo"
                        android:background="@drawable/sel_check"
                        android:layout_gravity="top|left" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:src="@drawable/myinfo_text4"
                        android:layout_gravity="left|center_vertical"
                        android:longClickable="true"
                        android:scaleType="fitStart"
                        android:layout_marginLeft="27dp"
                        android:id="@+id/imageView6" />
                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:src="@drawable/myinfo_text5"
                android:layout_gravity="top|left"
                android:longClickable="true"
                android:scaleType="fitStart"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_gravity="top|left"

                android:layout_marginTop="10dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:id="@+id/_checkPushOk"
                        android:background="@drawable/sel_check"
                        android:layout_gravity="top|left" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"

                        android:src="@drawable/myinfo_text3"
                        android:layout_gravity="left|center_vertical"
                        android:longClickable="true"
                        android:scaleType="fitStart"
                        android:layout_marginLeft="27dp"
                        android:id="@+id/_txtPushOk" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:id="@+id/_checkPushNo"
                        android:background="@drawable/sel_check"
                        android:layout_gravity="top|left" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:src="@drawable/myinfo_text4"
                        android:layout_gravity="left|center_vertical"
                        android:longClickable="true"
                        android:scaleType="fitStart"
                        android:layout_marginLeft="27dp"
                        android:id="@+id/imageView17" />
                </FrameLayout>


            </LinearLayout>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/_btnComplete"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp"
                android:src="@drawable/btn_complete_txt"
                android:padding="13dp"
                android:background="@drawable/btn_bg0" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</FrameLayout>

