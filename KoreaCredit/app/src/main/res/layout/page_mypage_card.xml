<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|left"
    tools:context="com.credit.korea.KoreaCredit.MainActivity"
    android:background="#e5e5e5">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/_scrollView"
        android:scrollbars="none"
        android:layout_gravity="top|left">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:background="#e5e5e5">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#22b4ed">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="13dp"

                    android:layout_gravity="center"
                    android:src="@drawable/mycard_title"
                    android:scaleType="fitCenter" />
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="top|left"
                android:background="#fff"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/_inputKey"
                    android:inputType="text"
                    android:background="@drawable/input_bg1"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="top|left"
                    android:hint="카드 검색어"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="97dp"
                    android:layout_height="30dp"
                    android:id="@+id/_btnSearch"
                    android:background="@drawable/mycard_btn_search"
                    android:layout_gravity="top|left"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="13dp"

                    android:scaleType="fitStart"
                    android:src="@drawable/mycard_text0"
                    android:layout_gravity="left|center_vertical" />

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_gravity="top|left"
                android:background="#ffffff"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/_myCardListBox">


            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="13dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/mycard_text1"
                    android:layout_gravity="left|center_vertical" />

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_gravity="top|left"
                android:background="#ffffff"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/_cardListBox">


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_gravity="top|left"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_marginBottom="20dp">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="13dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/mycard_text2"
                    android:layout_gravity="left|center_vertical"
                     />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#bbb"
                    android:layout_gravity="top|left"
                    android:layout_marginTop="10dp"></FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/_requestListBox"></LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>






