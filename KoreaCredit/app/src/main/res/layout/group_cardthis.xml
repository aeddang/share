<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|left"
    tools:context="com.credit.korea.KoreaCredit.MainActivity"
    android:orientation="vertical"
    android:gravity="top|left"
    android:background="#e5e5e5">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#f9f9f9"
        android:layout_gravity="top|left">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:scaleType="fitStart"
            android:src="@drawable/card_this_text0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:layout_marginTop="1dp" >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="13dp"
            android:layout_gravity="left|center_vertical"
            android:scaleType="fitStart"
            android:src="@drawable/card_search_text2"
            android:layout_marginLeft="15dp" />

        <Button
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:id="@+id/_btnPaturn"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/card_search_btn_paturn" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/_paturnStack"
        android:background="#f9f9f9"
        android:layout_gravity="top|left"
        android:layout_marginTop="1dp"
        android:baselineAligned="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:background="#fff">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/_inputCompany"
            android:inputType="text"
            android:background="@drawable/input_bg1"
            android:textSize="13dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_gravity="top|left"
            android:hint="가맹점 검색어"
            android:imeOptions="actionDone"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="97dp"
            android:layout_height="30dp"
            android:id="@+id/_btnCompany"
            android:background="@drawable/card_this_btn"
            android:layout_gravity="top|left"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="top|left"
        android:background="#fff" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/_inputPrice"
                android:layout_weight="1"
                android:password="false"
                android:background="@drawable/input_bg0"
                android:textSize="13dp"
                android:textColor="#666666"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:layout_gravity="top|left"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:hint="이용(예상)금액" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="12dp"
                android:src="@drawable/unit_won"
                android:layout_gravity="center_vertical|right"
                android:longClickable="true"
                android:scaleType="fitStart"
                android:id="@+id/imageView18"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top|left"
        android:background="#fff"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/_btnComplete"
            android:layout_gravity="top|left"
            android:src="@drawable/btn_search_txt"
            android:padding="13dp"
            android:background="@drawable/btn_bg0"
            android:layout_margin="15dp"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#f9f9f9"
        android:layout_gravity="top|left"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/imageView9"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/text_info_search_card2" />
    </FrameLayout>

</LinearLayout>

