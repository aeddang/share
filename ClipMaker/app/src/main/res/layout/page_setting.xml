<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|left"
    tools:context="com.aeddang.clipmaker.MainActivity" >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resoultion"
            android:id="@+id/_resoultionTxt"
            android:layout_gravity="top|right"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginRight="7dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_grey">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_gravity="center"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/progress_bg" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/_resoultionBar"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:progressDrawable="@drawable/sel_progress"
                android:thumb="@drawable/point_seek"
                android:progress="40"
                android:indeterminate="false"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:thumbOffset="20dp" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="frame rate"
            android:layout_gravity="top|right"
            android:id="@+id/_fpsTxt"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginRight="7dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_grey">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_gravity="center"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/progress_bg" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/_fpsBar"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:progressDrawable="@drawable/sel_progress"
                android:thumb="@drawable/point_seek"
                android:indeterminate="false"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:thumbOffset="20dp" />
        </FrameLayout>


    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/_backBtn"
        android:layout_gravity="left|bottom"
        android:layout_margin="20dp"
        android:background="@drawable/bg_blue"
        android:src="@drawable/btn_complete"
        android:scaleType="centerInside"
        android:padding="20dp" />


</FrameLayout>

