<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|left"
    android:background="#ffffff"
    tools:context=".MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:background="#ff7e3e" >

        <ImageButton
            android:id="@+id/_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/top_icon" />

        <EditText
            android:id="@+id/_searchText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/searchbar_bg"
            android:ems="10"
            android:hint="검색어 입력"
            android:inputType="text"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorLink="#000000"
            android:textSize="15dp" />

        <Button
             android:id="@+id/_searchBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|right"
            android:background="@drawable/transparent" />

        <ImageButton
            android:id="@+id/_menuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/btn_slide" />

    </FrameLayout>

    <WebView
        android:id="@+id/_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="50dp" />

</FrameLayout><!-- From: file:/Users/imbc-design01/work/DeliveryCommerce/app/src/main/res/layout/page_search.xml -->