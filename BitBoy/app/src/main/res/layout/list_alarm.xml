<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="top|left"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:background="@drawable/sel_bit_list_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/margin_ultra"
            app:srcCompat="@drawable/icon_drop" />

        <TextView
            android:id="@+id/_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_mid"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:lineSpacingExtra="-2dp"
            android:text="10000"
            android:textAlignment="textStart"
            android:textColor="@drawable/sel_bit_list_color"
            android:textSize="@dimen/font_big" />

        <Switch
            android:id="@+id/_switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_ultra"
            android:checked="false"
            android:elevation="4dp"
            android:thumbTint="@color/blue" />

    </LinearLayout>

</FrameLayout>

