<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ironraft.bitboy.MainActivity"
    android:id="@+id/_body"
    android:background="@color/white">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="top|left"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_gd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/area_bottom"
        android:paddingTop="@dimen/area_header">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_mid"
                android:background="@drawable/bg_msg">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/margin_small"
                    app:srcCompat="@drawable/icon_push_home" />

                <TextView
                    android:id="@+id/_textMsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_ultra"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_small"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_mid" />
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/_graphArea"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_mid">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/_listArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </LinearLayout>

</FrameLayout>
