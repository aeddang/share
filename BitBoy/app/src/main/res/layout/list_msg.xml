<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="top|left"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:background="@drawable/sel_bit_list_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/margin_ultra"
            app:srcCompat="@drawable/icon_push" />

        <TextView
            android:id="@+id/_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="@dimen/margin_mid"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_ultra"
            android:layout_marginTop="@dimen/margin_mid"
            android:includeFontPadding="false"
            android:text="BTC"
            android:textColor="@color/black"
            android:textSize="@dimen/font_mid" />

    </LinearLayout>

    <Button
        android:id="@+id/_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:background="@drawable/btn_transparent"
        android:elevation="2dp" />

</FrameLayout>

