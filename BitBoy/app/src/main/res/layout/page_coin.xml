<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ironraft.bitboy.MainActivity"
    android:id="@+id/_body"
    android:background="@color/white">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/area_header"
        android:layout_gravity="top|left"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_gd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/area_bottom"
        android:paddingTop="@dimen/area_header">

        <FrameLayout
            android:id="@+id/_listArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </FrameLayout>


    </LinearLayout>

</FrameLayout>
