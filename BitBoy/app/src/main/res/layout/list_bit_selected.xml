<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_body"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_gravity="top|left"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        android:background="@drawable/sel_bit_list_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/margin_ultra"
            android:includeFontPadding="false"
            android:text="BTC"
            android:textColor="@drawable/sel_bit_list_title_color"
            android:textSize="@dimen/font_big" />

        <TextView
            android:id="@+id/_viewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:includeFontPadding="false"
            android:text="/coin"
            android:textColor="@drawable/sel_bit_list_title_color"
            android:textSize="@dimen/font_tiny" />

        <TextView
            android:id="@+id/_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_ultra"
            android:layout_weight="1"
            android:gravity="right"
            android:includeFontPadding="false"
            android:text="10000"
            android:textColor="@drawable/sel_bit_list_color"
            android:textSize="@dimen/font_big" />

    </LinearLayout>

    <Button
        android:id="@+id/_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:background="@drawable/btn_transparent"
        android:elevation="2dp" />

</FrameLayout>

